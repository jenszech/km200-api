{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "./lib",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./src/types",
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.test.ts",
    "./src/__tests__/",
    "./src/example/",
    "./src/public/",
    "node_modules"
  ]
}